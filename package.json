{
  "name": "tonada",
  "version": "1.0.0",
  "description": "it is a ui kit have what you need to build a fast and quick dashboards and web apps without effort",
  "main": "index.js",
  "scripts": {
    "build:ts": "webpack",
    "build:sass": "sass --no-source-map ./src/scss/index.scss ./dist/css/tornada.css",
    "build": "npm run build:ts && npm run build:sass",
    "serve:ts": "webpack --watch",
    "serve:sass": "sass --no-source-map --watch ./src/scss/_index.scss ./dist/css/tornada.css",
    "serve": "npx concurrently \"npm:serve:ts\" \"npm:serve:sass\""
  },
  "keywords": [
    "ui-kit"
  ],
  "author": "codexline",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.3.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "components":[
    {
      "name":"slider",
      "className":"TonadaSlider",
      "path":"src/ts/components/slider.ts"
    },
    {
      "name":"input-password",
      "className":"TonadaInputPassword",
      "path":"src/ts/components/input-password.ts"
    },
    {
      "name":"accordion",
      "className":"TonadaAccordion",
      "path":"src/ts/components/accordion.ts"
    }
  ]
}
